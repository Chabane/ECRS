{
  "restartable": "rs",
  "events": {
    "restart": "echo 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "node_modules/",
    "src/"
  ],
  "ignore": [
    ".git"
  ],
  "env": {
    "CRASH_REPORTER_LOG_LEVEL": "debug",
    "CRASH_REPORTER_PORT": 2000,
    "CRASH_REPORTER_DATABASE_URL": "mongodb://localhost:27017/crash-db"
  },
  "script": "src/index.js",
  "options": {
    "extensions": ["js"],
    "exec": "node"
  }
}